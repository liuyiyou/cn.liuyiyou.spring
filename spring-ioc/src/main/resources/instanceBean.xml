<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!--使用默认无参的构造方法-->
    <bean name="bean1" class="com.github.liuyiyou.spring.ioc.InstanceByConstruct"></bean>


    <!-- 使用带参数的构造方法-->
    <bean name="bean2" class="com.github.liuyiyou.spring.ioc.InstanceByConstruct">
        <constructor-arg index="0" value="Hello Constuct world"></constructor-arg>
    </bean>
</beans>